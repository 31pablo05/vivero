      <div class="card group">
        <div class="text-5xl mb-4 transform group-hover:scale-110 transition-transform duration-300">
          {service.icon}
        </div>
        <h3 class="text-2xl font-semibold text-verde-hoja mb-3">
          {service.title}
        </h3>
        <p class="text-gray-600 leading-relaxed">
